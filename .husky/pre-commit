#!/usr/bin/env sh

# Prevent commits on main branch
branch="$(git rev-parse --abbrev-ref HEAD)"
if [ "$branch" = "main" ]; then
  echo "âŒ Direct commits to the 'main' branch are not allowed."
  echo "   Please create a feature branch and submit a pull request."
  exit 1
fi

# Run lint-staged on pre-commit
npx lint-staged